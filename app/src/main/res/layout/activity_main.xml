<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.talent518.acview.views.ClockView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.talent518.acview.views.FiveAngleStarView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.talent518.acview.views.HelicalLineView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.talent518.acview.views.ProgressView
                android:id="@+id/pv_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</HorizontalScrollView>
