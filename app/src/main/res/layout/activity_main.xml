<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.talent518.acview.views.ClockView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.talent518.acview.views.FiveAngleStarView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.talent518.acview.views.HelicalLineView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.talent518.acview.views.ProgressView
                android:id="@+id/pv_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#FFA8A8A8"
                android:padding="10dp">

                <com.github.talent518.acview.views.ProgressBarView
                    android:id="@+id/pbv_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF"
                android:padding="10dp">

                <com.github.talent518.acview.views.RoundRectLinearGradientRotateView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#FFFF6600"
                android:padding="10dp">

                <com.github.talent518.acview.views.SweepGradientRotateView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <com.github.talent518.acview.views.PinBallView
                app:name="square"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.github.talent518.acview.views.PinBallView
                app:name="length"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</HorizontalScrollView>
